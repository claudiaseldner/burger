<div class="container">
 

    <section id="page-name">
           
            <h1>Eat-Da-Buger</h1>
           

    </section>

     <img src="../public/assets/img/burger2.jpg" alt="burger" /> 

    <section class="row">
        <div class="col-md-7 col-left">
             
            <table>
                {{#each burgers}}
                    {{#unless devoured}}
                        {{> burgers}}
                    {{/unless}}
                {{/each}}
            </table>
        </div>
        <div class="col-md-5 col-right">
            {{#each burgers}}
                {{#if devoured}}
                    <div>{{id}}. {{burger_name}}</div>
                {{/if}}
            {{/each}}        
        </div>          
    </section>
    
    <div id='available'>
    <h2>Burgers Available to Eat:</h2>
    <ul>
        {{#each burgers}} {{#unless this.devoured}}
        <li>
            {{this.id}}. {{this.burger_name}}

            <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="false">
                <button class="btn btn-warning" type="submit">Eat Me!</button>
            </form>

        </li>
        {{/unless}} {{/each}}
    </ul>
</div>
    <form class="create-form">
        <div class="form-group">
            <label for="name"></label>
            <textarea id="name" name="burger-name" rows="2" cols="40" placeholder="What do you want to eat?"></textarea>
        </div>
        <button type="submit">Add Burger</button>
    </form>     
</div>
